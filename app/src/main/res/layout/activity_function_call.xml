<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FunctionCallActivity"
        android:layout_gravity="center"
        android:paddingTop="@dimen/padding_20"
        android:paddingBottom="@dimen/padding_20">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_login_guest"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Login as Guest" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_login_fb"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Login with facebook" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/login_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Login with phonumber" />
            <LinearLayout
                android:id="@+id/login_group"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/payment_button"
                android:visibility="gone">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Phone number"
                    android:paddingBottom="10dp"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:imeOptions = "flagNoFullscreen"
                    android:inputType="text"
                    android:padding="@dimen/padding_8"
                    android:singleLine="true"
                    android:hint="85512808080"
                    app:hintTextAppearance="@style/MyAppearanceBody1.Primary" />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_login"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorYellow"
                    android:text="Login" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/verify_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Verify" />

            <LinearLayout
                android:id="@+id/verify_group"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/payment_button"
                android:visibility="gone">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Otp Code"
                    android:paddingBottom="10dp"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_verify_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:imeOptions = "flagNoFullscreen"
                    android:inputType="text"
                    android:padding="@dimen/padding_8"
                    android:singleLine="true"
                    app:hintTextAppearance="@style/MyAppearanceBody1.Primary" />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_verify"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorYellow"
                    android:text="Verify" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/confirm_mysabay_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="confirm with MySabay" />

            <LinearLayout
                android:id="@+id/confrim_mysabay_group"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/payment_button"
                android:visibility="gone">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:paddingBottom="10dp"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_confirm_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:imeOptions = "flagNoFullscreen"
                    android:inputType="text"
                    android:padding="@dimen/padding_8"
                    android:singleLine="true"
                    app:hintTextAppearance="@style/MyAppearanceBody1.Primary" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:imeOptions = "flagNoFullscreen"
                    android:inputType="text"
                    android:padding="@dimen/padding_8"
                    android:singleLine="true"
                    app:hintTextAppearance="@style/MyAppearanceBody1.Primary" />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_confirm_mysabay"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorYellow"
                    android:text="Confirm MySabay" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_request_new_mysabay_view"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorYellow"
                    android:text="Create new" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/request_new_mysabay_group"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/payment_button"
                android:visibility="gone">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:paddingBottom="10dp"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_request_new_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:imeOptions = "flagNoFullscreen"
                    android:inputType="text"
                    android:padding="@dimen/padding_8"
                    android:singleLine="true"
                    app:hintTextAppearance="@style/MyAppearanceBody1.Primary" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_request_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:imeOptions = "flagNoFullscreen"
                    android:inputType="text"
                    android:padding="@dimen/padding_8"
                    android:singleLine="true"
                    app:hintTextAppearance="@style/MyAppearanceBody1.Primary" />
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_confirm_request_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:imeOptions = "flagNoFullscreen"
                    android:inputType="text"
                    android:padding="@dimen/padding_8"
                    android:singleLine="true"
                    app:hintTextAppearance="@style/MyAppearanceBody1.Primary" />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_request_mysabay_with_phone"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorYellow"
                    android:text="Request" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/create_mysabay_with_phone_verify_group"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/payment_button"
                android:visibility="gone">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Otp Code"
                    android:paddingBottom="10dp"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_mysabay_with_phone_verify_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:imeOptions = "flagNoFullscreen"
                    android:inputType="text"
                    android:padding="@dimen/padding_8"
                    android:singleLine="true"
                    app:hintTextAppearance="@style/MyAppearanceBody1.Primary" />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_create_mysabay_with_phone"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorYellow"
                    android:text="Create Mysabay with Phone" />
            </LinearLayout>


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/login_mysabay_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Login with MySabay" />

            <LinearLayout
                android:id="@+id/login_mysabay_group"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/payment_button"
                android:visibility="gone">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:paddingBottom="10dp"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:imeOptions = "flagNoFullscreen"
                    android:inputType="text"
                    android:padding="@dimen/padding_8"
                    android:singleLine="true"
                    app:hintTextAppearance="@style/MyAppearanceBody1.Primary" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:imeOptions = "flagNoFullscreen"
                    android:inputType="text"
                    android:padding="@dimen/padding_8"
                    android:singleLine="true"
                    app:hintTextAppearance="@style/MyAppearanceBody1.Primary" />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_login_mysabay"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorYellow"
                    android:text="Login" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/create_mysabay_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Create MySabay" />

            <LinearLayout
                android:id="@+id/create_mysabay_group"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/payment_button"
                android:visibility="gone">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:paddingBottom="10dp"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_mysabay_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:imeOptions = "flagNoFullscreen"
                    android:inputType="text"
                    android:padding="@dimen/padding_8"
                    android:singleLine="true"
                    app:hintTextAppearance="@style/MyAppearanceBody1.Primary" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_mysabay_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:imeOptions = "flagNoFullscreen"
                    android:inputType="text"
                    android:padding="@dimen/padding_8"
                    android:singleLine="true"
                    app:hintTextAppearance="@style/MyAppearanceBody1.Primary" />
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_mysabay_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_bg"
                    android:imeOptions = "flagNoFullscreen"
                    android:inputType="text"
                    android:padding="@dimen/padding_8"
                    android:singleLine="true"
                    app:hintTextAppearance="@style/MyAppearanceBody1.Primary" />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_create_mysabay"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorYellow"
                    android:text="Create" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_user_profile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="User Info" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_store"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Store" />

            <TextView
                android:id="@+id/shop_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/padding_10"
                android:gravity="center"
                android:text="Please select item from store"
                android:textColor="@color/colorWhite700" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_payment_provider"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Payment Provider" />

            <LinearLayout
                android:id="@+id/btn_group"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginTop="@dimen/padding_20"
                android:gravity="center_horizontal"
                android:layout_marginBottom="@dimen/padding_20"
                app:layout_constraintBottom_toTopOf="@+id/btn_pay"
                app:layout_constraintEnd_toStartOf="@+id/btn_close"
                app:layout_constraintStart_toEndOf="@+id/btn_back"
                android:layout_marginStart="@dimen/padding_20"
                android:layout_marginEnd="@dimen/padding_20"
                android:background="@drawable/payment_button"
                android:visibility="gone">
                <LinearLayout
                    android:id="@+id/btn_mysabay"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/payment_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:gravity="left|center_vertical">
                    <TextView
                        android:id="@+id/tv_my_sabay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:text="@string/mysabay"
                        android:textColor="@color/border" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sabay_provider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btn_sabay_coin"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="Sabay Coin"
                            android:layout_marginTop="5dp"
                            android:height="30dp"
                            android:textAllCaps="false"
                            android:background="@color/colorWhite"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/sc_bonus"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_sabay_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="false"
                        android:background="@color/colorWhite"
                        android:text="Sabay Gold"
                        android:visibility="gone"/>
                        <TextView
                            android:id="@+id/sg_bonus"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_in_app_purchase"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/padding_10"
                    android:background="@drawable/payment_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:gravity="left|center_vertical">
                    <TextView
                        android:id="@+id/tv_in_app_purchase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:text="Android In App Billing"
                        android:textColor="@color/border" />

                    <TextView
                        android:id="@+id/lbl_in_app_purchase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/padding_20"
                        android:textSize="11sp"
                        android:gravity="right|center_vertical"
                        android:text="bonus"
                        android:textColor="@color/border" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_third_bank_provider"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/padding_10"
                    android:background="@drawable/payment_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:gravity="left|center_vertical">
                    <TextView
                        android:id="@+id/tv_third_bank_provider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="@dimen/padding_10"
                        android:text="@string/select_a_partner_bank"
                        android:textColor="@color/border" />
                </LinearLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_pay"
                    style="@style/ButtonPrimary"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:text="@string/pay"
                    android:textAllCaps="true"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_logout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Logout" />

        </android.support.v7.widget.LinearLayoutCompat>
        </ScrollView>

        <LinearLayout
            android:id="@+id/view_pb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</layout>
